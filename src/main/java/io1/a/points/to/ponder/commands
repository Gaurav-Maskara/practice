12.     SELECT O.OrderNumber, CONVERT(date,O.OrderDate) AS Date, 
                      P.ProductName, I.Quantity, I.UnitPrice 
		  FROM [Order] O 
					  JOIN OrderItem I ON O.Id = I.OrderId 
					  JOIN Product P ON P.Id = I.ProductId
	      ORDER BY O.OrderNumber
		  
